.page
    .toolbar-top
        .btn.mdi-2x.mdi-action-stars(
            ng-click="goStarred()"
            ng-class="{'btn-default':!filterFavourites, 'btn-primary':filterFavourites}"
        )
        .btn.mdi-2x.mdi-action-turned-in(
            ng-click="goReadLater()"
            ng-class="{'btn-default':!filterBookmarks, 'btn-primary':filterBookmarks}"
        )
        .btn.btn-default.mdi-2x.mdi-action-pageview(ng-click="goSearch()")
        .btn.btn-default.mdi-2x.mdi-content-add(ng-click="goAddNote()")
        
    .toolbar-bottom
        .btn.btn-default.mdi-2x.mdi-communication-invert-colors-on(ng-click="invertColors()")
        .btn.btn-default.mdi-2x.mdi-action-account-box(ng-click="goUserProfile()")
    
    .content
        subject-tabs(
            selected="currentSubject"
        )
        note-list(
            items="allNotes"
            subject="currentSubject"
            selected="currentNote"
            filter-favourites="filterFavourites"
            filter-bookmarks="filterBookmarks"
        )
        note-preview(
            items="allNotes"
            item="currentNote"
        )
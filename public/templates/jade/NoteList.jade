.list-group
	//.mdi-content-add
	.list-group-item(
			ng-repeat="item in items"
			ng-click="select(item)"
			ng-class="{ 'selected': item.id === selected.id }"
		)
		.row-action-primary
		
			i.mdi-action-settings.mdi-lg(ng-if="item.flags.owned")
			i.mdi-content-forward.mdi-lg(ng-if="!item.flags.done && !item.flags.owned")
			i.mdi-navigation-check.mdi-lg(ng-if="item.flags.done")
		
		.row-content 
		
			.list-group-item-heading {{ item.title }}
			.list-group-item-text {{ item.subject }} | {{ item.subjectType }}
